{
    "name": "sekola-be",
    "version": "1.0.0",
    "description": "Repository for Sekola's Backend",
    "main": "app.js",
    "scripts": {
        "dev": "nodemon ./src/app.ts",
        "build": "tsc && tsc-alias",
        "start": "node ./dist/app.js",
        "prepare": "husky install",
        "pre-commit": "lint-staged"
    },
    "author": "Sekola Dev Team",
    "license": "MIT",
    "dependencies": {
        "@commitlint/cli": "^13.2.1",
        "@commitlint/config-conventional": "^13.2.0",
        "@prisma/client": "^3.2.1",
        "@types/csvtojson": "^2.0.0",
        "@types/jsonwebtoken": "^8.5.5",
        "bcrypt": "^5.0.1",
        "cors": "^2.8.5",
        "csvtojson": "^2.0.10",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "fs": "^0.0.1-security",
        "jsonwebtoken": "^8.5.1",
        "module-alias": "^2.2.2",
        "multer": "^1.4.3",
        "nodemailer": "^6.7.0",
        "prisma": "^3.2.1",
        "tsconfig-paths": "^3.11.0",
        "tscpaths": "^0.0.9",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.0",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/module-alias": "^2.0.1",
        "@types/multer": "^1.4.7",
        "@types/node": "^16.11.6",
        "@types/nodemailer": "^6.4.4",
        "@types/uuid": "^8.3.1",
        "@typescript-eslint/eslint-plugin": "^5.1.0",
        "eslint": "^7.32.0",
        "husky": "^6.0.0",
        "lint-staged": "^11.2.3",
        "prettier": "^2.4.1",
        "ts-node": "^10.2.1",
        "tsc-alias": "^1.3.10",
        "typescript": "^4.4.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "lint-staged": {
        "*.ts": [
            "prettier -w",
            "eslint --fix"
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    }
}
